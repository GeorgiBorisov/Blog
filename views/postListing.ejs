<%- include('head.ejs')%>
    <main>
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <% for(post of posts) { %>
                        <div class="col-md-12 post-wrapper">
                            <a href="/post/<%= post.id %>"><h2 class="post-title"><%= post.title %></h2>
                            <p class="post-date"><%= post.created.toLocaleDateString() %></p>
                            <% if(post.image) { %>
                            <img src="<%= post.image %>" alt="">
                            <% } %>
                            <p class="post-content"><%= post.body %></p></a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
   <%- include('foot.ejs')%>