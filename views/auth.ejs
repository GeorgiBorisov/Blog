<%- include('head.ejs')%>
<main>
    <div class="container user-form">
        <form action="<%= action %>" method="POST">
            <div class="form-group row">
                <div class="col-sm-8 offset-sm-2">
                    <label for="user" class="col-form-label">User name</label>
                    <input type="text" class="form-control" id="user" name="user" 
                    value="<%= action == '/update' ? user.username : '' %>">
                </div>
            </div>
            <% if (action == '/register' || action == '/update') { %>
                <div class="form-group row">
                    <div class="col-sm-8 offset-sm-2">
                        <label for="email" class="col-form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" 
                        value="<%= action == '/update' ? user.email : '' %>">
                    </div>
                </div>
            <% } %>
            <% if (action == '/update') { %>
                <div class="form-group row">
                    <div class="col-sm-8 offset-sm-2">
                        <label for="oldpass" class="col-form-label">Old password</label>
                        <input type="password" class="form-control" id="oldpass" name="oldpass">
                    </div>
                </div>
            <% } %>
            <div class="form-group row">
                <div class="col-sm-8 offset-sm-2">
                    <label for="pass" class="col-form-label"><%= action == '/update' ? 'New password' : 'Password' %></label>
                    <input type="password" class="form-control" id="pass" name="pass">
                </div>
            </div>
            <% if (action == '/register' || action == '/update') { %>
                <div class="form-group row">
                    <div class="col-sm-8 offset-sm-2">
                        <label for="confirm" class="col-form-label">Confirm password</label>
                        <input type="password" class="form-control" id="confirm" name="confirm">
                    </div>
                </div>
            <% } %>
            <div class="row">
                <div class="btn-group mx-auto col-sm-2" role="group">
                    <button class="form-control btn-success" type="submit"><%= buttonLabel %></button>
                </div>
            </div>
             
        </form>
    </div>
</main>
<script src="/script.js"></script>
